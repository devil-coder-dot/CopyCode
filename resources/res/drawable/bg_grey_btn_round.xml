<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="#575757">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#888888"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient android:startColor="#888888" android:endColor="#888888" android:angle="90" android:type="linear"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
</ripple>
