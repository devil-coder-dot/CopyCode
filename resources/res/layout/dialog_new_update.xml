<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/bg_white_5dp_radius_bng" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="#404040" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New version available"/>
        <TextView android:textSize="16sp" android:textColor="#8a000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="A new version of this application is available. Please update"/>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <TextView android:textSize="16sp" android:textColor="@color/colorPrimary" android:id="@+id/updateTxt" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/colorPrimary" android:id="@+id/cancelTxt" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:layout_toLeftOf="@+id/updateTxt" android:layout_marginEnd="15dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
