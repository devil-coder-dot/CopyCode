<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/activity_permission_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="20dp" android:src="@drawable/ic_splash_logo" android:contentDescription="@null"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="We Need Your Permission"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginStart="16dp" android:layout_marginEnd="10dp">
                <ImageView android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ic_location" android:contentDescription="@null"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_location_permission_text" android:layout_marginStart="20dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginStart="16dp" android:layout_marginEnd="10dp">
                <ImageView android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/ic_storage" android:contentDescription="@null"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_storage_permission_text" android:layout_marginStart="20dp"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="#009688" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/label_disclaimer" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/tv_get_started" android:background="@color/colorPrimary" android:paddingTop="16dp" android:paddingBottom="16dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:text="Get Started" android:layout_alignParentBottom="true" android:onClick="onClick" android:textAllCaps="true"/>
</RelativeLayout>
